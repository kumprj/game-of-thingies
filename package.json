{
  "name": "game-of-thingies",
  "version": "1.0.0",
  "description": "A fun game with friends",
  "main": "server/index.ts",
  "scripts": {
    "start": "tsx server/index.ts",
    "dev": "concurrently \"tsx watch server/index.ts\" \"npm start --prefix client\"",
    "build": "tsc server/index.ts --outDir dist --target es2020 && cd client && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "http": "^0.0.1-security",
    "socket.io": "^4.7.0",
    "tsx": "^4.21.0",
    "uuid": "^9.0.1"
  }
}
